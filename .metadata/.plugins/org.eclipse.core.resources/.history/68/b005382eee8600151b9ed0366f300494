def make_x( data):
		
	m = []
	for x in data:
		temp = []
		for i in xrange(3+1):
			temp.append(x**i)
		#print temp
		m.append(temp)
	#print np.transpose(zip(*m))
	m = (zip(*m))
	return  np.transpose(np.transpose(zip(*m)))





x = [ 1,2,3]
y = [1,2,3]
weights = np.diag( [1 for _ in xrange(3)] )
getCoef(y, x, weights)